<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee
                             http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

  <display-name>Equb Idir Management System</display-name>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>

  <!-- Auth -->
  <servlet>
    <servlet-name>LoginServlet</servlet-name>
    <servlet-class>com.equbidir.controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>LoginServlet</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>

  <!-- Admin -->
  <servlet>
    <servlet-name>AdminDashboardServlet</servlet-name>
    <servlet-class>com.equbidir.controller.AdminDashboardServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>AdminDashboardServlet</servlet-name>
    <url-pattern>/admin/dashboard</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>MemberServlet</servlet-name>
    <servlet-class>com.equbidir.controller.MemberServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>MemberServlet</servlet-name>
    <url-pattern>/admin/members</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>EqubServlet</servlet-name>
    <servlet-class>com.equbidir.controller.EqubServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>EqubServlet</servlet-name>
    <url-pattern>/admin/equb</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>IdirServlet</servlet-name>
    <servlet-class>com.equbidir.controller.IdirServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>IdirServlet</servlet-name>
    <url-pattern>/admin/idir</url-pattern>
  </servlet-mapping>

  <servlet>
    <servlet-name>ExpenseServlet</servlet-name>
    <servlet-class>com.equbidir.controller.ExpenseServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ExpenseServlet</servlet-name>
    <url-pattern>/admin/expenses</url-pattern>
  </servlet-mapping>

</web-app>
